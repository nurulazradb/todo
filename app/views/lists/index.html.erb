<p id="notice"><%= notice %></p>

<h1>Lists</h1>

<table class="table table-bordered">
  <tbody>
    <% @lists.each do |list| %>
      <tr class="<%= completed_class list %>">
        <td class="<%= striker_class list %>"><%= list.description %></td>
        <td>
          <%= link_to 'Show', list %>
          <%= link_to 'Edit', edit_list_path(list) %>
          <%= link_to 'Destroy', list, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Add Todo Item', new_list_path, class: 'btn btn-primary' %>
